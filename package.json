{
  "name": "todo-app",
  "version": "1.0.0",
  "description": "Todo app with separate frontend and backend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npm start",
    "websocket": "cd backend && npm run websocket",
    "test-ws": "cd backend && npm run test-ws",
    "test-ws-advanced": "cd backend && npm run test-ws-advanced",
    "testclient": "cd backend && npm run testclient"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "dotenv": "^16.3.1",
    "mongoose": "^7.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^7.1.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "vercel": "^46.1.0"
  },
  "keywords": [
    "todo",
    "react",
    "express",
    "mongodb",
    "websocket"
  ],
  "author": "",
  "license": "MIT"
}
